<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.elftree.mall.activity.GoodsInfoActivity">
    <data>
        <variable
            name="title"
            type="String"/>
        <variable
            name="imageUrl"
            type="String"/>
        <variable
            name="goodsInfo"
            type="com.elftree.mall.model.GoodsInfo"/>
        <variable
            name="clickEvent"
            type="android.view.View.OnClickListener"/>
    </data>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalTextSize"
                android:textColor="@color/darkPrimary"
                android:layout_centerInParent="true"
                android:text="@{title}"/>
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:onClick="@{clickEvent}"
                />
        </RelativeLayout>
        <include layout="@layout/layout_interval_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/draweeview"
                android:layout_width="78dp"
                android:layout_height="78dp"
                style="@style/DraweeViewStyle"
                app:imageURI="@{goodsInfo.img[0]}"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/draweeview"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallTextSize"
                    android:textColor="@color/darkPrimary"
                    android:text="@{goodsInfo.goods_name}"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellowPrimary"
                    android:textSize="@dimen/smallTextSize"
                    android:text="@{@string/price_format(goodsInfo.shop_price)}"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/spec_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallTextSize"
                android:textColor="@color/grayPrimary"
                android:text="@string/quantity"/>
            <EditText
                android:id="@+id/edittext_quantity"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/smallTextSize"
                android:background="@drawable/spec_rbtn_bg"
                android:gravity="center"
                android:inputType="number"
                />

        </RelativeLayout>

    </LinearLayout>

</layout>